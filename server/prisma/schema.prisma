datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Todo {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  isCompleted Boolean
  title       String
  updatedAt   DateTime @updatedAt
}